{
  "root": {
    "src": "./src",
    "dest": "./public"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "public"
      }
    },

    "static": {
      "src": "static",
      "dest": "./",
      "extensions": ["ico", "txt", "xml"],
      "hidden": "htaccess"
    },

    "js": {
      "src": "javascripts",
      "dest": "js",
      "extractSharedJs": true,
      "entries": {
        "app": ["./app.js"]
      },
      "extensions": ["js"]
    },

    "css": {
      "src": "stylesheets",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": true
      },
      "extensions": ["styl", "css"]
    },

    "haml": {
      "src": "haml",
      "dest": "./",
      "dataFile": "data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["haml", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },


    "jade": {
      "src": "jade",
      "dest": "./",
      "settings": {
        "pretty": true
      },
      "dataFile": "config/data.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["jade", "json"],
      "excludeFolders": ["layouts", "config", "shared"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "sprites",
      "dest": "images",
      "extensions": ["svg"]
    },

    "inject":{
      "resources":[
        "./public/css/*.css",
        "./public/js/*.js"
      ]
    }
  }
}
