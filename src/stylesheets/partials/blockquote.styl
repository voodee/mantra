.blockquote
  text-align right
  
  border-right 0.1em solid rgba(255,255,255,.3)
  // margin 3rem 0 0 0
  margin 0
  padding 0 3rem 3rem 3rem
  
  font-size 45px
  font-weight 600
  font-style normal
  line-height 48px

  &:before
    // // left -29rem
    // // top 9rem
    // content 'â€œ'
    // font-size 76rem
    // opacity .1
    // font-family 'Georgia', serif;
    // font-weight 600
    // // display none
    // position fixed
    // left 11vw
    // top 56vh
    // z-index 0
    display none
    
  &:after
    display none
    

  &--small
    font-size 2vw
    line-height normal
    
  &--very-small
    font-size 1vw
    line-height normal
      
    
  footer
    font-size .6em
    color rgba(255,255,255,.7)
    float right
    width 100%
    
    &:before
      content '\2015'  
      margin-right 1rem
      

  @media (max-width: 767px)
    font-size 2em
    line-height normal
    
    margin 1rem 0 0 0
    padding 0 1rem 1rem 1rem
    
    &:before
      font-size 24rem
      left -6vw
      top 8vh
      // left -7rem
      // top -13rem
      // font-size 37rem
        


.author-info
  list-style none
  margin 0
  padding 0
  padding-left 2vw
  color #fafafa    
  
  li 
    margin-bottom 1rem    
  
  h3 
    font-size 1.4rem
    line-height normal
    color rgba(255,255,255,.5)
    margin 0
     
  a 
    color #fafafa
    text-decoration none
    border-bottom 1px solid
    
    &:focus
    &:hover
      border-color transparent  