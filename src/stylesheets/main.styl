body
  // background-color rgb(250, 153, 214)
  background-color #fafafa

.main
  // overflow hidden
  // height 100vh
  display flex
  flex-direction column
  justify-content center
  
  padding-top 8rem
  padding-bottom 120px
  
  min-height calc(100vh - 8rem - 120px)
  width 100%
  
